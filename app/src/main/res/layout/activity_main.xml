<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    tools:context="com.scott.annie.calculatorapp.MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="357dp"
        android:layout_height="200dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="357dp"
        android:layout_height="224dp"
        android:layout_weight="0.33"
        android:hint="RESULT"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="+"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="-"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="*"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="0"
            android:textSize="40sp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="."
            android:textSize="40sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="="
            android:textSize="40sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="/"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>
